{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5",
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "node",
        "declaration" : true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "example"
    ]
}