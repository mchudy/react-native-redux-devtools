{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2015",
    "module": "es2015",
    "lib": ["dom", "es2015", "es2016"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "example"]
}
